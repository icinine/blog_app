<h1>Listing all Article</h1>

<%= link_to 'New Article', new_article_path, class: "btn btn-defalt btn-lrg", id: "new-article-btn" %>

<% @articles.each do |article| %>
  <div class="well well-lrg">
    <div class="article-title">
      <%= link_to article.title, article_path(article) %>
    </div>
      <div class="article-body">
        <%= truncate(article.body, length: 500) %>
    </div>
    
</div>
<% end %>