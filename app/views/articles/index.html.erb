<div id="article_block">
<h1>Latest Articles</h1>
<% if user_signed_in? %>
<%= link_to 'New Article', new_article_path, class: "btn btn-success", id: "new-article-btn" %>
<% end %>
<br/>
  
 <div id="my_articles">
<% @articles.each do |article| %>
   
  <div class="well well-lrg">
    <div class="article-title">
      <%= link_to article.title, article_path(article) %>
    </div>
      <div class="article-body">
        <%= truncate(article.body, length: 100) %>
    </div>
    <div class="author">
      <% if article.user %>
      
      <small>Created by: <%= article.user.email %></small>
      <% end %>
    </div>
</div>
  </div>
<% end %>
    
</div>